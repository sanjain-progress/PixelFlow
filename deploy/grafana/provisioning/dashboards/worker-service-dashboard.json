{
    "title": "Worker Service - Overview",
    "tags": [
        "pixelflow",
        "worker",
        "prometheus"
    ],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
        {
            "id": 1,
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "type": "graph",
            "title": "Task Processing Rate",
            "targets": [
                {
                    "expr": "rate(worker_tasks_processed_total[5m])",
                    "legendFormat": "{{status}}",
                    "refId": "A"
                }
            ],
            "yaxes": [
                {
                    "format": "reqps",
                    "label": "Tasks/sec"
                },
                {
                    "format": "short"
                }
            ],
            "xaxis": {
                "mode": "time"
            },
            "lines": true,
            "fill": 1,
            "linewidth": 2,
            "seriesOverrides": [
                {
                    "alias": "failure",
                    "color": "#F2495C"
                },
                {
                    "alias": "success",
                    "color": "#73BF69"
                }
            ],
            "legend": {
                "show": true,
                "values": true,
                "current": true
            }
        },
        {
            "id": 2,
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 0
            },
            "type": "graph",
            "title": "Processing Duration",
            "targets": [
                {
                    "expr": "rate(worker_task_processing_duration_seconds_sum[5m]) / rate(worker_task_processing_duration_seconds_count[5m])",
                    "legendFormat": "Avg Duration",
                    "refId": "A"
                }
            ],
            "yaxes": [
                {
                    "format": "s",
                    "label": "Duration"
                },
                {
                    "format": "short"
                }
            ],
            "xaxis": {
                "mode": "time"
            },
            "lines": true,
            "fill": 1,
            "linewidth": 2,
            "legend": {
                "show": true,
                "values": true,
                "current": true
            }
        },
        {
            "id": 3,
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 0,
                "y": 8
            },
            "type": "stat",
            "title": "Active Tasks",
            "targets": [
                {
                    "expr": "worker_active_processing_tasks",
                    "refId": "A"
                }
            ],
            "options": {
                "graphMode": "area",
                "colorMode": "value",
                "justifyMode": "auto",
                "textMode": "auto"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "value": null,
                                "color": "green"
                            },
                            {
                                "value": 5,
                                "color": "orange"
                            },
                            {
                                "value": 10,
                                "color": "red"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 4,
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 8,
                "y": 8
            },
            "type": "graph",
            "title": "Kafka Consumption Rate",
            "targets": [
                {
                    "expr": "rate(worker_kafka_messages_consumed_total[5m])",
                    "legendFormat": "Consumed",
                    "refId": "A"
                },
                {
                    "expr": "rate(worker_kafka_consumption_errors_total[5m])",
                    "legendFormat": "Errors",
                    "refId": "B"
                }
            ],
            "yaxes": [
                {
                    "format": "reqps",
                    "label": "Msgs/sec"
                },
                {
                    "format": "short"
                }
            ],
            "xaxis": {
                "mode": "time"
            },
            "lines": true,
            "fill": 1,
            "linewidth": 2,
            "seriesOverrides": [
                {
                    "alias": "Errors",
                    "color": "#F2495C"
                }
            ],
            "legend": {
                "show": true,
                "values": true,
                "current": true
            }
        },
        {
            "id": 5,
            "gridPos": {
                "h": 8,
                "w": 8,
                "x": 16,
                "y": 8
            },
            "type": "stat",
            "title": "Total Processed (Success)",
            "targets": [
                {
                    "expr": "worker_tasks_processed_total{status=\"success\"}",
                    "refId": "A"
                }
            ],
            "options": {
                "graphMode": "area",
                "colorMode": "value",
                "justifyMode": "auto",
                "textMode": "auto"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "color": {
                        "mode": "thresholds"
                    },
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {
                                "value": null,
                                "color": "blue"
                            }
                        ]
                    }
                }
            }
        }
    ],
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "timepicker": {
        "refresh_intervals": [
            "5s",
            "10s",
            "30s",
            "1m",
            "5m",
            "15m",
            "30m",
            "1h",
            "2h",
            "1d"
        ]
    }
}